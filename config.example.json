      "type": "tv",
      "driver": "aqara"
    }
  ],
  "aqara": {
    "app_id": "your-aqara-app-id",
    "app_key": "your-aqara-app-key",
    "key_id": "your-aqara-key-id",
    "base_url": "https://open-cn.aqara.com",
    "scenes": {
      "tv_pin_entry": "default-scene-id-for-pin-entry",
